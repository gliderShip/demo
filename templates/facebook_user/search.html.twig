{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <script src="https://unpkg.com/htmx.org@1.3.3" integrity="sha384-QrlPmoLqMVfnV4lzjmvamY0Sv/Am8ca1W7veO++Sp6PiIGixqkD+0xZ955Nc03qO" crossorigin="anonymous"></script>
{% endblock head %}

{#{% block javascripts %}#}
{#    {{ parent() }}#}
{#    {{ encore_entry_script_tags('search') }}#}
{#{% endblock %}#}

{% block body_id 'facebook_search' %}



{% block main %}

    <input minlength="3" class="form-control" type="text"
           name="q" placeholder="Begin Typing To Search Users..."
           hx-get="{{ path('hfacebook_user_search') }}"
           hx-trigger="keyup changed delay:700ms"
           hx-target="#search-results"
           hx-indicator=".htmx-indicator"
    >

    <table class="table" style="font-size: 12px">
        <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Mobile</th>
            <th>Sex</th>
            <th>Work</th>
            <th>Url</th>
        </tr>
        </thead>
        <tbody id="search-results">
        </tbody>
    </table>

    <div id="results">
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}
    {{ show_source_code(_self) }}
{% endblock %}
